<img src="/assets/img/hamburger.png" height="250px" width="250px" alt="Burger">

<h1>Eat-Da-Burger</h1>



<!-- burgers -->
<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
  
    <li>{{burger_name}} <button class="change-devoured" id="{{id}}">Devour Burger</button></li>

    {{/unless}}
  {{/each}}
</ul>




<!--devoured burgers-->
<h2>Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
     
     <li>{{burger_name}} </li>

    {{/if}}
  {{/each}}
</ul>



<!--  burger form -->
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Type:</label>
    <input type="text" id="bu" name="burger_name">
  </div>

  <button type="submit">Add A burger</button>
</form>
